# Launch1st AI Workflow - Environment Variables
# Copy this file to .env and fill in your values

# Anthropic API Key (Required)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Project Settings
PROJECT_ID=launch1st
ENVIRONMENT=development  # development, staging, production

# Knowledge Base Settings
KNOWLEDGE_BASE_DIR=./data/knowledge_base
CHROMA_PERSIST=true

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=./logs/workflow.log

# Cost Controls
MAX_TOKENS_PER_AGENT=8192
MAX_RETRIES=3
PARALLEL_VOTER_LIMIT=5

# Optional: OpenAI for embeddings (ChromaDB uses its own by default)
# OPENAI_API_KEY=sk-your-key-here

# Optional: Webhook for notifications
# WEBHOOK_URL=https://your-webhook.example.com/notify
